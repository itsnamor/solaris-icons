{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"root": false,

	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},

	"css": {
		"parser": { "tailwindDirectives": true }
	},

	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**/*", "vite.config.ts", "!**/*.gen.*"]
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"lineWidth": 120
	},

	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"useValidAriaRole": {
					"level": "on",
					"options": { "ignoreNonDom": true }
				}
			},
			"nursery": {
				"recommended": true,
				"useSortedClasses": { "fix": "safe", "level": "on" }
			},
			"recommended": true,
			"style": {
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"patterns": [
							{
								"group": ["../*"],
								"message": "Relative imports are not allowed"
							}
						]
					}
				},
				"useConsistentObjectDefinitions": "on",
				"useConsistentTypeDefinitions": {
					"level": "on",
					"options": { "style": "type" }
				},
				"useNamingConvention": "on"
			}
		}
	},

	"vcs": {
		"clientKind": "git",
		"enabled": false,
		"useIgnoreFile": false
	}
}
